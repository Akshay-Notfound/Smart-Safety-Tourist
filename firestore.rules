rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is an authority
    function isAuthority() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'authority';
    }

    // Helper function to check if the user is Super Admin
    function isSuperAdmin() {
      return request.auth.token.email == 'admin@gmail.com';
    }

    // 'users' collection rules
    match /users/{userId} {
      // Allow read for any authenticated user
      allow read: if request.auth != null;
      
      // Allow write if: Owner OR Authority OR Super Admin
      allow write: if request.auth != null && (
        request.auth.uid == userId || 
        isAuthority() || 
        isSuperAdmin()
      );

      // Allow access to the notifications subcollection
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAuthority());
      }
    }

    // 'live_locations' rules
    match /live_locations/{touristId} {
      allow read: if request.auth != null && (request.auth.uid == touristId || isAuthority());
      allow write: if request.auth != null && request.auth.uid == touristId;
    }

    // !! NEW FEEDBACK RULES !!
    match /feedbacks/{feedbackId} {
      allow read, write: if true;
    }

    // !! NEW CHAT RULES !!
    match /group_chat_messages/{messageId} {
      allow read, write: if request.auth != null;
    }

    match /typing_status/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
